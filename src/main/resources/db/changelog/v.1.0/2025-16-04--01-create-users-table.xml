<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-users-table" author="arslanefimov">
        <createTable tableName="users">
            <column name="id" autoIncrement="true" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INTEGER"/>
            <column name="height" type="DECIMAL(5,2)">
                <constraints checkConstraint="age > 0"/>
            </column>
            <column name="weight" type="DECIMAL(5,2)">
                <constraints checkConstraint="weight > 0"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Установка расширения uuid-ossp для генерации UUID -->
    <changeSet id="install-uuid-extension" author="arslanefimov">
        <sql>CREATE
        EXTENSION IF NOT EXISTS "uuid-ossp";</sql>
    </changeSet>

    <!-- Создание таблицы users с id типа UUID -->
    <changeSet id="create-users-table" author="arslanefimov">
        <createTable tableName="users">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INTEGER"/>
            <column name="height" type="DECIMAL(5,2)">
                <constraints checkConstraint="height > 0"/>
            </column>
            <column name="weight" type="DECIMAL(5,2)">
                <constraints checkConstraint="weight > 0"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>